<Window x:Class="SingleOperaFace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SingleOperaFace"
        mc:Ignorable="d"
        Title="SingleOperaFace" WindowStartupLocation="CenterScreen"
        Height="1080" Width="1920" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Name="sayHello" Content="欢迎使用SingleOperaFace!" Grid.Row="0" HorizontalAlignment="Center" VerticalContentAlignment="Center" FontSize="48"/>
        <Image Grid.Row="1" Name="image" Loaded="image_Loaded" Height="900" Width="1600"/>
        <Canvas Grid.Row="1"  Name="faceCanves" Height="900" Width="1600" >
            
        </Canvas>
    </Grid>
</Window>